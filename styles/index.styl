@import 'nib'

global-reset()
*
  box-sizing: border-box

$base-font-size = 17px
$base-line-factor = (25/17)
$base-line-height = $base-line-factor * 1rem

$rhythm(n = 1)
  n * $base-line-height;

$rel-rhythm(n = 1)
  n * $base-line-factor * 1em;

$small-font-size = (13/17) * 1em

html, body
  font-family: "Merriweather"
  font-size: $base-font-size
  line-height: $base-line-factor
  color: hsl(0, 0%, 10%)

img
  display: block
  width: 100%


.app-setup__space-field
  margin-bottom: 1em


.app
  display: flex
  flex-direction: column
  align-items: center
  margin: auto

.lookbook
  max-width: 75ex
  padding: 0 2rem
  box-sizing: content-box

.lookbook__title
  font-size: 3em
  font-weight: 300
  font-style: italic
  margin-bottom: $rhythm(1)


.lookbook__header
  margin-top: $rhythm(2)
  margin-bottom: $rhythm(2)
  text-align: center

.lookbook__menu
  font-size: $small-font-size
  display: flex
  justify-content: flex-end
  padding: $rel-rhythm(0.5) 0
  border-bottom: 1px solid hsl(0, 0%, 80%)

.lb-module.x--text
  max-width: 75ex
  margin: $rhythm(2) auto

.md-content
  em
    font-style: italic
  p
    margin-bottom: $rhythm(1)

  h2
    margin-bottom: $rhythm(1)


.lb-module
  margin-bottom: $rhythm(2)

  &.x--2up > .lb-slot
    width: 50%

  &.x--3up > .lb-slot
    width: 50%

  &.x--photo > .lb-slot.x--text
    margin: auto
    padding: 0 2em

  &.x--credits
    text-align: center
    color: hsl(0, 0%, 50%)
    p
      margin: 0
.lb-module.x--photo
  display: flex
  align-items: stretch




.lb-section-photo
  width: calc(100% + 8rem)
  border-radius: 10px


.lb-photo-products
  font-size: $small-font-size
  display: flex
  padding: $rel-rhythm(1) 0
  border-bottom: 1px solid hsl(0, 0%, 87%)

  &__item
    width: 25%
    flex: 0 0 auto
    padding-right: 1em

  &__brand
    text-transform: uppercase
    font-weight: 600
    margin-bottom: $rel-rhythm(0.5)

  &__name
    color: hsl(0, 0%, 40%)

$paper-shadow()
  box-shadow: 0 3px 12px 0 rgba(black, 0.16),
              0 3px 12px 0 rgba(black, 0.23)

.lb-index
  max-width: 60em
  padding: 0 1em

  &__item
    transition: box-shadow 0.4s
    display: block
    position: relative
    margin: $rhythm(2) 0
    $paper-shadow()


  &__caption
    transition: background 0.2s linear
    &
      background: hsla(0, 0%, 0%, 0.75)
    .lb-index:hover &
      background: hsla(0, 0%, 8%, 0.75)

    color: white
    position: absolute
    bottom: 0
    left: 0
    right: 0
    padding: 2rem

  &__title
    font-size: (30 / $base-font-size) em
    font-weight: bolder
